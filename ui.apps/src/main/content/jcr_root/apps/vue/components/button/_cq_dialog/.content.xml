<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Vue - Button"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <layout jcr:primaryType="nt:unstructured"
              margin="{Boolean}false"
              sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
      <items jcr:primaryType="nt:unstructured">
         <column jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
               <buttonContent cq-msm-lockable="./buttonContent"
                              fieldLabel="Conteúdo do botão"
                              jcr:primaryType="nt:unstructured"
                              name="./buttonContent"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <buttonType cq-msm-lockable="./buttonType"
                           defaultValue="primary"
                           fieldLabel="Estilo do botão"
                           jcr:primaryType="nt:unstructured"
                           name="./buttonType"
                           sling:resourceType="granite/ui/components/coral/foundation/form/select"
                           value="primary">
                  <items jcr:primaryType="nt:unstructured">
                     <primary jcr:primaryType="nt:unstructured"
                              selected="true"
                              text="Primário"
                              value="primary"/>
                     <secondary jcr:primaryType="nt:unstructured"
                                text="Secundário"
                                value="secondary"/>
                     <terciary jcr:primaryType="nt:unstructured" text="Terciário" value="terciary"/>
                  </items>
               </buttonType>
               <buttonFontSize cq-msm-lockable="./buttonFontSize"
                               fieldLabel="Tamanho do texto do botão (em px)"
                               jcr:primaryType="nt:unstructured"
                               max="{Double}64"
                               min="{Double}8"
                               name="./buttonFontSize"
                               sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                               step="1"
                               value="{Long}14"/>
            </items>
         </column>
      </items>
   </content>
</jcr:root>
