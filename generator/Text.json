{
    "project-settings": {
      "code-owner": "SPA Vue Project",
      "bundle-path": "core/src/main/java",
      "test-path": "core/src/test/java",
      "apps-path": "ui.apps/src/main/content/jcr_root/apps",
      "component-path": "vue",
      "model-interface-pkg": "com.vue.core.models",
      "model-impl-pkg": "com.vue.core.models.impl"
    },
    "name": "text",
    "title": "Vue - Text",
    "group": "SPA Vue Project - Content",
    "type": "components",
    "options": {
      "js": false,
      "jstxt": false,
      "css": false,
      "csstxt": false,
      "html": false,
      "html-content": false,
      "slingmodel": true,
      "testclass": false,
      "junit-major-version": 5,
      "content-exporter": true,
      "model-adaptables": [
        "request"
      ],
      "generic-javadoc": false,
      "properties": [
        {
          "field": "textContent",
          "type": "textfield",
          "label": "Conteúdo do texto",
          "json-expose": true,
          "attributes": {}
        },
        {
            "field": "textSize",
            "type": "numberfield",
            "label": "Tamanho do texto (em px)",
            "json-expose": true,
            "attributes": {
                "max": "{Double}48",
                "min": "{Double}0",
                "step": "1",
                "value": "{Long}24"
            }
        },
        {
            "field": "textColor",
            "type": "colorfield",
            "label": "Escolha uma cor para o título",
            "json-expose": true,
            "attributes": {
              "defaultValue": "#333333",
              "value": "#333333",
              "showDefaultColors": "{Boolean}false",
              "variant": "default"
            },
            "items": [
              {
                  "field": "black",
                  "attributes": {
                      "value": "#000000"
                  }
              },
              {
                  "field": "blue",
                  "attributes": {
                      "value": "#0000FF"
                  }
              },
              {
                  "field": "green",
                  "attributes": {
                      "value": "#00FF00"
                  }
              },
              {
                  "field": "red",
                  "attributes": {
                      "value": "#FF0000"
                  }
              }
            ]
        }
      ]
    }
}